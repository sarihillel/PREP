@model PREP.Models.PublicationMailDetails

<script>
    $(document).ready(function () {
         // hideBCC();
        $('#dialogbox').hide();
        $("#SendBtn").click(SendMail);
        $(".exit-popup-btn").click(function () {
            DeleteMailIMG();
            exitPopUpWindow();
        });
       
    });
</script>


@using (Html.BeginForm("SendPublicationMail", "Status", FormMethod.Post, new { @id = "MailForm", @class = "popUpViewWrapper ", @role = "form" }))
{

    <div>
        @Html.HiddenFor(model => model.ReleaseID)
        @Html.HiddenFor(model => model.CPID, new { @id = "cp-mail" })
        @Html.HiddenFor(model => model.imagePath)
        <div class="row" style="height: 100px; margin-bottom: 15px;">
            <div class="col-lg-1 SendDiv">
                <button id="SendBtn">Send<br />Email</button>
            </div>
            <div class="form-group mail-group-container">
                <div class="row-fluid mail-group">
                    @Html.LabelFor(model => model.To, new { @class = "mail-label" })
                    <div class="mail-text-box" title="@Model.To">
                        @Html.TextBoxFor(model => model.To, new { @id = "mail-to", @class = "form-control mail-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row-fluid mail-group">
                    @Html.LabelFor(model => model.BCC, new { @class = "mail-label" })
                    <div class="mail-text-box" title="@Model.BCC">
                        @Html.TextBoxFor(model => model.BCC, new { @id = "mail-cc", @class = "form-control mail-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row-fluid mail-group">
                    @Html.LabelFor(model => model.Subject, new { @class = "mail-label" })
                    <div class="mail-text-box" title="@Model.Subject">
                        @Html.TextBoxFor(model => model.Subject, new { @id = "mail-subject", @class = "form-control mail-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="col-lg-1 exit-popup-div">
                <input type="button" class="exit-popup-btn x-btn" value="X" />
            </div>
        </div>
    </div>
    <div class="row-fluid">
        @Html.TextAreaFor(model => model.beforeMessage, new { @class = "form-control mail-textarea", @rows = "5" })
    </div>
    <img src="@(Model.imagePath)" />
    <div class="row-fluid">
        @Html.TextAreaFor(model => model.afterMessage, new { @class = "form-control mail-textarea", @rows = "2" })
    </div>
}








